int ConvertAnim2_2dTo3d(int anim1, int anim2_2d)
{
	int anim2 = anim2_2d;
	if(anim1 == ANIM1_DEAD)
	{
		switch(anim2)
		{
		case ANIM2_2D_DEAD_FRONT:         anim2 = ANIM2_3D_KNOCK_FRONT;        break;
		case ANIM2_2D_DEAD_BACK:          anim2 = ANIM2_3D_KNOCK_BACK;         break;
		case ANIM2_2D_DEAD_BLOODY_SINGLE: anim2 = ANIM2_3D_DEAD_BLOODY_SINGLE; break;
		case ANIM2_2D_DEAD_BURN:          anim2 = ANIM2_3D_DEAD_BURN;          break;
		case ANIM2_2D_DEAD_BLOODY_BURST:  anim2 = ANIM2_3D_DEAD_BLOODY_BURST;  break;
		case ANIM2_2D_DEAD_BRUST:         anim2 = ANIM2_3D_DEAD_BURST;         break;
		case ANIM2_2D_DEAD_PULSE:         anim2 = ANIM2_3D_DEAD_PULSE;         break;
		case ANIM2_2D_DEAD_LASER:         anim2 = ANIM2_3D_DEAD_LASER;         break;
		case ANIM2_2D_DEAD_BURN2:         anim2 = ANIM2_3D_DEAD_BURN;          break;
		case ANIM2_2D_DEAD_PULSE_DUST:    anim2 = ANIM2_3D_DEAD_PULSE_DUST;    break;
		case ANIM2_2D_DEAD_EXPLODE:       anim2 = ANIM2_3D_DEAD_EXPLODE;       break;
		case ANIM2_2D_DEAD_FUSED:         anim2 = ANIM2_3D_DEAD_FUSED;         break;
		case ANIM2_2D_DEAD_BURN_RUN:      anim2 = ANIM2_3D_DEAD_BURN_RUN;      break;
		case ANIM2_2D_DEAD_FRONT2:        anim2 = ANIM2_3D_DEAD_PRONE_FRONT;   break;
		case ANIM2_2D_DEAD_BACK2:         anim2 = ANIM2_3D_DEAD_PRONE_BACK;    break;
		default:                                                               break;
		}
	}
	else
	{
		switch(anim2)
		{
		case ANIM2_2D_PICKUP:         anim2 = (anim1 == ANIM1_UNARMED ? ANIM2_3D_PICKUP : ANIM2_3D_BURST); break; // Burst
		case ANIM2_2D_USE:            anim2 = (anim1 == ANIM1_UNARMED ? ANIM2_3D_USE    : ANIM2_3D_FLAME); break; // Flame
		case ANIM2_2D_WALK:           anim2 = ANIM2_3D_WALK;         break;
		case ANIM2_2D_STAY:           anim2 = ANIM2_3D_IDLE;         break;
		case ANIM2_2D_SHOW:           anim2 = ANIM2_3D_SHOW;         break;
		case ANIM2_2D_HIDE:           anim2 = ANIM2_3D_HIDE;         break;
		case ANIM2_2D_DODGE_EMPTY:    anim2 = ANIM2_3D_DODGE_FRONT;  break;
		case ANIM2_2D_DODGE_WEAPON:   anim2 = ANIM2_3D_DODGE_FRONT;  break;
		case ANIM2_2D_DAMAGE_FRONT:   anim2 = ANIM2_3D_DAMAGE_FRONT; break;
		case ANIM2_2D_DAMAGE_BACK:    anim2 = ANIM2_3D_DAMAGE_BACK;  break;
		case ANIM2_2D_PUNCH:          anim2 = ANIM2_3D_PUNCH_RIGHT;  break;
		case ANIM2_2D_KICK:           anim2 = ANIM2_3D_KICK_HI;      break;
		case ANIM2_2D_THROW_WEAPON:   anim2 = ANIM2_3D_THROW;        break;
		case ANIM2_2D_THROW_EMPTY:    anim2 = ANIM2_3D_THROW;        break;
		case ANIM2_2D_THRUST:         anim2 = ANIM2_3D_THRUST_1H;    break;
		case ANIM2_2D_SWING:          anim2 = ANIM2_3D_SLASH_1H;     break;
		case ANIM2_2D_SHOOT:          anim2 = ANIM2_3D_SINGLE;       break;
		case ANIM2_2D_RUN:            anim2 = ANIM2_3D_RUN;          break;
		case ANIM2_2D_PREPARE_WEAPON: anim2 = ANIM2_3D_SINGLE;       break;
		case ANIM2_2D_TURNOFF_WEAPON: anim2 = ANIM2_3D_SINGLE;       break;
		default:                                                     break;
		}
	}
	return anim2;
}

