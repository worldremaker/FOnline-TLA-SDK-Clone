// Animation macro
#define _CritAnimate #(cr,anim)     cr.Animate(0,anim,null,true,true)
#define _CritAnimateUse       #(cr) do{if(not cr.IsAnim3d()) cr.Animate(ANIM1_UNARMED, ANIM2_2D_USE         , null, true, true); else cr.Animate(0, ANIM2_3D_USE        , null, true, true);}while(false)
#define _CritAnimatePickup    #(cr) do{if(not cr.IsAnim3d()) cr.Animate(ANIM1_UNARMED, ANIM2_2D_PICKUP      , null, true, true); else cr.Animate(0, ANIM2_3D_PICKUP     , null, true, true);}while(false)
#define _CritAnimatePunch     #(cr) do{if(not cr.IsAnim3d()) cr.Animate(ANIM1_UNARMED, ANIM2_2D_PUNCH       , null, true, true); else cr.Animate(0, ANIM2_3D_PUNCH_RIGHT, null, true, true);}while(false)
#define _CritAnimateKick      #(cr) do{if(not cr.IsAnim3d()) cr.Animate(ANIM1_UNARMED, ANIM2_2D_KICK        , null, true, true); else cr.Animate(0, ANIM2_3D_KICK_HI    , null, true, true);}while(false)
#define _CritAnimateThrow     #(cr) do{if(not cr.IsAnim3d()) cr.Animate(ANIM1_UNARMED, ANIM2_2D_THROW_EMPTY , null, true, true); else cr.Animate(0, ANIM2_3D_THROW      , null, true, true);}while(false)
#define _CritAnimateThrust    #(cr) do{if(not cr.IsAnim3d()) cr.Animate(0            , ANIM2_2D_THRUST      , null, true, true); else cr.Animate(0, ANIM2_3D_THRUST_1H  , null, true, true);}while(false)
#define _CritAnimateSwing     #(cr) do{if(not cr.IsAnim3d()) cr.Animate(0            , ANIM2_2D_SWING       , null, true, true); else cr.Animate(0, ANIM2_3D_SWING_1H   , null, true, true);}while(false)
#define _CritAnimateThrowWeap #(cr) do{if(not cr.IsAnim3d()) cr.Animate(0            , ANIM2_2D_THROW_WEAPON, null, true, true); else cr.Animate(0, ANIM2_3D_THROW      , null, true, true);}while(false)
#define _CritAnimateSingle    #(cr) do{if(not cr.IsAnim3d()) cr.Animate(0            , ANIM2_2D_SHOOT       , null, true, true); else cr.Animate(0, ANIM2_3D_SINGLE     , null, true, true);}while(false)
#define _CritAnimateBrust     #(cr) do{if(not cr.IsAnim3d()) cr.Animate(0            , ANIM2_2D_BURST       , null, true, true); else cr.Animate(0, ANIM2_3D_BURST      , null, true, true);}while(false)
#define _CritAnimateFidget    #(cr) do{if(not cr.IsAnim3d()) cr.Animate(0            , ANIM2_2D_STAY        , null, true, true); else cr.Animate(0, Random(0, 1) == 0 ? ANIM2_3D_FIDGET1 : ANIM2_3D_FIDGET2, null, true, true);}while(false)
